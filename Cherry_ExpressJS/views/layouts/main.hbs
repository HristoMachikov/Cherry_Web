<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='shortcut icon' type='image/x-icon' href='/images/favicon.ico' />
    <title>Get Cherry</title>
    <script src="https://kit.fontawesome.com/ff2f9140ef.js"></script>
    <link rel="stylesheet" href="https://kit-free.fontawesome.com/releases/latest/css/free.min.css" media="all">
    <link rel="stylesheet" href="/css/siteErr.css">
    <link rel="stylesheet" href="/css/site.css">

</head>

<body>
    <div class="main">

        <header class="main-header">
            <div class="wrapper">
                <input type="checkbox" name="toggle" id="toggle" class="toggle-nav">
                <div class="site-header">
                    <div class="site-logo">
                        <a href="/" class="image">
                            <img src="/images/Logo.jpg" alt="logo">
                        </a>
                        <p class="text">
                            get cherry
                        </p>
                    </div>
                    <label for="toggle" class="toggle-nav-btn">
                        <span class="menu"></span>
                    </label>
                    <nav class="site-navigation">
                        <ul>
                            <li>
                                <a href="/about">
                                    Начало
                                </a>
                            </li>
                            <li>
                                <a href="/">
                                    Меню
                                </a>
                            </li>
                            {{#if user}}
                            {{#if user.isAdmin}}
                            <li>
                                <a href="/cherry/create">
                                    Нов сорт
                                </a>
                            </li>
                            <li>
                                <a href="/admin/pending-orders">
                                    Чакащи
                                </a>
                            </li>
                            {{else}}
                            <li>
                                <a href="/order/my-orders">
                                    Поръчани
                                </a>
                            </li>
                            <li>
                                <a href="/user/current-state">
                                    Кошница
                                </a>
                            </li>
                            {{/if}}
                            <li>
                                <form id="logout-form" action="/user/logout" method="post"></form>
                                <a href="javascript:document.getElementById('logout-form').submit()">
                                    Изход
                                </a>
                            </li>
                            {{else}}
                             <li>
                                <a href="/user/register">
                                    Регистрация
                                </a>
                            </li>
                            <li>
                                <a href="/user/login">
                                    Вход
                                </a>
                            </li>
                            {{/if}}
                        </ul>
                    </nav>
                </div>
            </div>
        </header>

        <main class="main-content">

            {{#if globalErrors}}
            {{#each globalErrors}}
            <span class="error">{{this}}</span>
            {{/each}}
            {{/if}}


            {{#if globalError}}
            <span class="error">{{globalError}}</span>
            {{/if}}

            <div class="wrapper">



                {{{body}}}
            </div>
        </main>

        <footer class="main-footer">
            <div class="wrapper">
                <div class="site-footer">
                    <p>©2019 Get Cherry. All rights reserved. Designed and developed by Hristo Machikov</p>
                </div>
            </div>
        </footer>

    </div>
</body>

</html>